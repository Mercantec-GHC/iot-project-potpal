<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="Frontend.styles.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <script>
        window.stripeJsLoaded = false;
        window.onStripeReady = () => {
            if (!window.stripeJsLoaded) {
                console.warn("Stripe.js not loaded yet.");
                return;
            }

            const script = document.createElement("script");
            script.src = "/js/stripeInterop.js";
            script.onload = () => console.log("stripeInterop.js loaded");
            document.head.appendChild(script);
        };
    </script>

    <!-- Stripe JS loads and then triggers your custom loader -->
    <script src="https://js.stripe.com/v3/" onload="window.stripeJsLoaded = true; window.onStripeReady();"></script>

    <HeadOutlet />
</head>

<body>
    <Routes @rendermode="InteractiveServer"/>

    <script src="_framework/blazor.web.js"></script>
</body>

</html>
