@page "/PlantDetails/{PlantId}"
    <div class="container mt-4">
        <div class="row justify-content-center">
            <!-- Column 1: Plant Info -->
            <div class="col-lg-4 content-box">
                <h2>Plant Name</h2>
                <img src="img/cactus.jpg" alt="Plant Image" class="img-fluid">
                <p>A cactus is a type of plant known for its thick, fleshy stems that store water...</p>
            </div>

            <!-- Column 2: Current Values -->
            <div class="col-lg-4 content-box">
                <h3>Current Values</h3>
                <p>Temperature: -- °C</p>
                <p>Soil Moisture: -- %</p>
                <p>Light Level: -- %</p>
            </div>

            <!-- Column 3: Ideal Values -->
            <div class="col-lg-4 content-box">
                <h3>Ideal Values</h3>

                <!-- Ideal Temperature -->
                <div class="d-flex align-items-center">
                    <label for="ideal-temp" class="form-label flex-grow-1">Ideal Temperature:</label>
                    <input type="number" id="ideal-temp" class="form-control w-50">
                    <span class="unit ms-2">°C</span>
                </div>

                <!-- Ideal Soil Moisture -->
                <div class="d-flex align-items-center mt-2">
                    <label for="ideal-moisture" class="form-label flex-grow-1">Ideal Soil Moisture:</label>
                    <input type="number" id="ideal-moisture" class="form-control w-50">
                    <span class="unit ms-2">%</span>
                </div>

                <!-- Ideal Light Level -->
                <div class="d-flex align-items-center mt-2">
                    <label for="ideal-light" class="form-label flex-grow-1">Ideal Light Level:</label>
                    <input type="number" id="ideal-light" class="form-control w-50">
                    <span class="unit ms-2">%</span>
                </div>
            </div>
        </div>
    </div>

